<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OTPActivity">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/logoLayout"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/menuIv"
            android:src="@drawable/ic_menu_white_24dp"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <EditText
        android:layout_above="@id/btngetOtp"
        android:id="@+id/contactEt"
        android:hint="Contact No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<Button
    android:layout_above="@id/otpTv"
    android:id="@+id/btngetOtp"
    android:text="Get Otp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/otpTv"
        android:layout_above="@id/otpET"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:text="Let's verify your Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/otpET"
        android:textColor="#212121"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="6"
        android:inputType="phone"
        android:digits="0123456789"
        android:letterSpacing="1.5"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:singleLine="true"
        android:textSize="24sp"
        android:layout_marginRight="@dimen/otp_margin"
        android:layout_marginLeft="@dimen/otp_margin"
        />
    <LinearLayout
        android:id="@+id/otpLayout"
        android:gravity="center"
        android:layout_marginRight="@dimen/otp_margin"
        android:layout_marginLeft="@dimen/otp_margin"
        android:layout_below="@id/otpET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#212121"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#212121"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#212121"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#212121"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#212121"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#212121"
            android:layout_width="match_parent"
            android:layout_height="3dp">

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnVerify"
        android:layout_centerHorizontal="true"
        android:text="Verify"
        android:layout_below="@id/otpLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>